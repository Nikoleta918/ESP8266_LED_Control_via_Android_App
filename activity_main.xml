<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/button_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/button_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:layout_below="@id/button_water"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_set_water_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Water Schedule"
        android:layout_below="@id/button_food"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button_set_food_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Food Schedule"
        android:layout_below="@id/button_set_water_schedule"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
